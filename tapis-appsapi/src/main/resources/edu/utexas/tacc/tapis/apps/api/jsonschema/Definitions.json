{
  "$id": "http://tapis.tacc.utexas.edu/Definitions",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Common definitions for requests",
  "additionalProperties": false,
  "AppId": {
    "type": "string",
    "minLength": 1,
    "maxLength": 80
  },
  "UserName": {
    "type": "string",
    "minLength": 1,
    "maxLength": 60
  },
  "DirPath": {
    "type": "string",
    "minLength": 1,
    "maxLength": 4096
  },
  "AppTypeEnum": {
    "type": "string",
    "enum": [
      "BATCH",
      "INTERACTIVE"
    ]
  },
  "capabilityCategoryEnum": {
    "type": "string",
    "enum": [
      "SCHEDULER",
      "OS",
      "HARDWARE",
      "SOFTWARE",
      "JOB",
      "CONTAINER",
      "MISC",
      "CUSTOM"
    ]
  },
  "FileInput": {
    "type": "object",
    "required": [
      "sourceUrl"
    ],
    "properties": {
      "sourceUrl": {
        "type": "string",
        "minLength": 1,
        "format": "uri"
      },
      "targetPath": {
        "type": "string"
      },
      "metaName": {
        "type": "string",
        "minLength": 1
      },
      "metaRequired": {
        "type": "boolean"
      },
      "metaKeyValuePairs": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "value": { "type": "string" }
          }
        }
      }
    }
  }
}